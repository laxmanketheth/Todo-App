{
    "version": 2,
    "builds" : [
        {"src": "*.js", "use": "@vercel/node"}
    ], 
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/addtodo",
            "methods" : ["GET", "POST", "DELETE"],
            "headers" : {
                "Access-Control-Allow-Origin" : "https://todo-app-backend-sigma.vercel.app/",
                "Access-Control-Allow-Credentials" : "true"
            }            
        }        
    ]
}